<!DOCTYPE html>
<html>
  <head>
    <title>Tabimaru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/d85941bf84.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>
    <header>
      <div id="hamburger">
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to 'Top', root_path %></li>
            <li><%= link_to 'My page', users_mypage_path(current_user.id) %></li>
            <li><%= link_to 'users', users_path %></li>
            <li><%= link_to 'bookmark',  likes_path(id: current_user.id) %></li>
            <li><%= link_to 'index', trip_articles_path %></li>
            <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
          <% elsif admin_signed_in? %>
            <li><%= link_to 'Top', admin_path %></li>
            <li><%= link_to 'User index', admin_users_path %></li>
            <li><%= link_to 'Post', admin_comments_path %></li>
          <% else %>
            <li><%= link_to 'Top', root_path %></li>
            <li><%= link_to 'About', about_path %></li>
            <li><%= link_to 'Sign up', new_user_registration_path %></li>
            <li><%= link_to 'Log in', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
      <div id="hm-icon">
      <a class="menu-trigger" href="#">
        <span></span>
        <span></span>
        <span></span>
      </a>
    </div>
    </header>
    <%= yield %>
  </body>
</html>
