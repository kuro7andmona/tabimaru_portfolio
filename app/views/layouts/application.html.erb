<!DOCTYPE html>
<html>
  <head>
    <title>Tabimaru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/d85941bf84.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <div id="hamburger">
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to 'トップ', root_path %></li>
            <li><%= link_to 'マイページ', users_mypage_path(current_user.id) %></li>
            <li><%= link_to 'ユーザー', users_path %></li>
            <li><%= link_to 'お気に入り',  likes_path(id: current_user.id) %></li>
            <li><%= link_to '投稿一覧', trip_articles_path %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          <% elsif admin_signed_in? %>
            <li><%= link_to 'トップ', admin_path %></li>
            <li><%= link_to 'ユーザー一覧', admin_users_path %></li>
            <li><%= link_to '投稿・コメント管理', admin_comments_path %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'トップ', root_path %></li>
            <li><%= link_to 'Tabimaruについて', about_path %></li>
            <li><%= link_to '新規登録', new_user_registration_path %></li>
            <li><%= link_to 'ログイン', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
      <div id="hm-icon">
      <a class="menu-trigger" href="#">
        <span></span>
        <span></span>
        <span></span>
      </a>
    </div>
    </header>
    <%= yield %>
    <footer class="fixed-bottom text-center mx-0 bg-dark bg-opacity-75 text-white" >©️2023 KURO</footer>
  </body>
</html>
