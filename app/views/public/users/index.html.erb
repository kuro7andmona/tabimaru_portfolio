<h1 class= "row justify-content-center mt-5 p-5 display-4 font-weight-bolder">ユーザー一覧</h1>
<div class= "conrainer-md row justify-content-center">
  <div class="col-10">
  <table class= "table table-hover">
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to users_mypage_path(user.id) do %>
              <%= image_tag user.get_image(30,30), class: "rounded-circle" %>
          <% end %>
        </td>
        <td><%= user.nickname %></td>
        <td><%= user.introduction %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
