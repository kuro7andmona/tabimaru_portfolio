  <div class="row justify-content-center">
    <h2 class= "font-weight-bold col-2">Sign up</h2>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @user, url: registration_path(resource_name) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <dl class= "row">
          <dt class= "col-3">
            <%= f.label :name %><br/>
          </dt>
            <dd class="col-9">
              <%= f.text_field :name,  placeholder: "name", autofocus: true, autocomplete: "name" %>
            </dd>
        </dl>
      </div>


      <div class="field">
        <dl class= "row">
          <dt class= "col-3">
            <%= f.label :nickname, "ニックネーム" %><br />
          </dt>
          <dd class="col-9">
              <%= f.text_field :nickname,  placeholder: "nickname", autofocus: true, autocomplete: "nickname" %>
          </dd>
        </dl>
      </div>

      <div class="field">
          <dl class= "row">
            <dt class= "col-3">
              <%= f.label :email %><br />
            </dt>
            <dd class="col-9">
              <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email" %>
            </dd>
          </dl>
      </div>

      <div class="field">
        <dl class= "row">
          <dt class= "col-3">
            <%= f.label :password %>
          </dt>
          <dd class="col-9">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, placeholder: "password",autocomplete: "new-password" %>
          </dd>
        </dl>
      </div>

      <div class="field">
        <dl class= "row">
          <dt class= "col-3">
            <%= f.label :password_confirmation %><br />
          </dt>
          <dd class="col-9">
            <%= f.password_field :password_confirmation, placeholder: "password",autocomplete: "new-password" %>
          </dd>
        </dl>
      </div>
      <div class="actions text-center">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
    <div class="text-center pt-3">
      <%= render "public/shared/links" %>
    </div>





