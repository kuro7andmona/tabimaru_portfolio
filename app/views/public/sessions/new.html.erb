<div class="row justify-content-center">
  <h2 class= "font-weight-bold col-1">Log in</h2>
</div>
<div class="row justify-content-center">
  <%= form_with model: @user, url: session_path(resource_name) do |f| %>
  <div class="field">
    <dl class= "row">
      <dt class= "col-3">
        <%= f.label :email %><br />
      </dt>
      <dd class="col-9">
        <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email" %>
        </dd>
    </dl>
  </div>

  <div class="field">
    <dl class= "row">
      <dt class= "col-3">
        <%= f.label :password %><br />
      </dt>
      <dd class="col-9">
        <%= f.password_field :password, placeholder: "password", autocomplete: "current-password" %>
      </dd>
    </dl>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <div class="actions text-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="actions text-center">
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
<% end %>

    <div class="actions text-center pt-3">
      <div class="sign_up">
        会員登録がお済みでない方
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
