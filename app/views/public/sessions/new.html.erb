<h2 class= "font-weight-bold text-center p-5">ログイン</h2>
<div class="row justify-content-center">
  <%= render "public/shared/error_messages", resource: resource %>
  <%= form_with model: @user, url: session_path(resource_name) do |f| %>
  <table class= "table table-borderless">
    <tbody>
      <tr>
        <th><%= f.label :email, "メールアドレス" %><br /></th>
        <td><%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th><%= f.label :password, "パスワード" %><br /></th>
        <td><%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password" %></td>
      </tr>
      <tr>
        <th></th>
        <td>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン情報を保持する" %>
        <% end %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "ログイン", class: "btn btn-outline-secondary" %></td>
  <% end %>
      </tr>
      <tr>
        <th></th>
        <td>
        会員登録がお済みでない方
        <%= render "public/shared/links" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>