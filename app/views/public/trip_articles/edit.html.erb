<div>
  <%= flash[:notice] %>
</div>
<div class= "conrainer-md">
    <h2 class="text-center m-5 p-5">投稿編集</h2>
    <div class="row justify-content-center pt-4 text-right">
      <%= form_with model: @trip_artcle, url: trip_article_path(@trip_article.id), method: :patch do |f| %>
        <%= image_tag @trip_article.user.get_image(30,30) %>
        <%= @trip_article.user.name %>
    </div>
    <div class="row justify-content-center pt-4">
      <div class= "field">
        <dl class= "row">
          <dt class= "col-3">
            <%= f.label :image, "画像" %>
          </dt>
          <dd class="col-9">
            <%= f.file_field :image, accept: "image/*" %>
          </dd>
        </dl>
      </div>
    </div>
    <div class="row justify-content-center pt-4">
      <div class= "field pr-3">
        <dl class= "row">
          <dt class= "col-3">
            <%= f.label :title, "タイトル" %>
          </dt>
          <dd class="col-9">
            <%= f.text_field :title, placeholder: "タイトル" %>
          </dd>
        </dl>
      </div>
    </div>
    <div class="row justify-content-center pt-4">
      <div class= "field pr-3">
        <dl class= "row">
          <dt class= "col-3">
            <%= f.label :text, "本文" %>
          </dt>
          <dd class="col-9">
            <%= f.text_area :text, placeholder: "本文" %>
          </dd>
        </dl>
      </div>
    </div>
    <div class="actions text-center p-3">
        <%= f.submit '投稿', class: "btn btn-outline-secondary"  %>
        </div>
    <% end %>
    </div>
  </div>
</div>
