<div class= "conrainer-md">
  <div class="row justify-content-center pt-4">
    <%= image_tag @trip_article.user.get_image(30,30) %>
    <%= @trip_article.user.name %>
  </div>
  <div class="row justify-content-center pt-4">
    <%= image_tag @trip_article.get_image(200,200) %>
  </div>
  <div class="row justify-content-center pt-4">
    <%= @trip_article.title %>
  </div>
  <div class="row justify-content-center pt-4">
    <%= @trip_article.text %>
  </div>
  <div class="row justify-content-center pt-4">
    <%= @trip_article.created_at.strftime('%Y/%m/%d') %>
  </div>

    <% @trip_article.comments.each do |comment| %>
     <div class="row justify-content-center pt-4">
        <p><%= image_tag comment.user.get_image(30,30) %></p>
        <%= comment.user.nickname %>
        <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
        <% if comment.user == current_user %>
          <%= link_to "削除",  trip_article_comment_path(@trip_article.id,comment.id), method: :delete, "data-confirm" => "コメントを削除しますか？" %>
        <% end %>
        </div>
      <% end %>
  <div class="row justify-content-center pt-4">
    <%= form_with model: [@trip_article, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
  </div>
  <div class="row justify-content-center pt-4">
      <%= f.submit "送信する" %>
  </div>
    <% end %>
  </div>
</div>

