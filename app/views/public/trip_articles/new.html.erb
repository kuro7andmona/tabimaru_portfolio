
<div class= "conrainer-md">
  <div class="row justify-content-center pt-4">
    <h2>新規投稿</h2>
  </div>
  <div class="row justify-content-center pt-4 text-danger">
      <% if @trip_article.errors.any? %>
        <%= @trip_article.errors.count %>件のエラーが発生しました
  </div>
  <div class="text-center pt-4">
        <ul>
        <% @trip_article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
        </ul>
  </div>
        <% end %>
  <div class="text-center text-danger">
    <%= flash[:notice] %>
  </div>
    <%= form_with class: "w-100", model: @trip_article, method: :post do |f| %>

  <div class="row justify-content-center pt-4 text-right">
    <div class= "field">
      <dl class= "row">
        <dt class= "col-4">
          <%= label :image , "画像"%>
        </dt>
        <dd class="col-4">
          <%= f.file_field :image, accept: "image/*" %>
        </dd>
      </dl>
    </div>
  </div>
  <div class="row justify-content-center pt-4">
    <div class= "field mr-5">
      <dl class= "row">
        <dt class= "col-4">
        <%= f.label :title, "タイトル" %>
        </dt>
        <dd class="col-4 w-50">
          <%= f.text_field :title, placeholder: "タイトル" %>
        </dd>
      </dl>
    </div>
  </div>
  <div class="row justify-content-center pl-5 ml-5">
    <div class= "field mr-5">
      <dl class= "row">
        <dt class= "col-2">
          <%= f.label :text, "本文" %>
        </dt>
        <dd class="col-4">
          <%= f.text_area :text , placeholder: "本文", class: "h-100", size: "60×60", maxlength: 100 %>
        </dd>
      </dl>
    </div>
  </div>
  <div class="row justify-content-center pt-4">
    <div class= "field mr-4">
      <%= f.label :prefecture_id, "都道府県" %>
      <%= f.select :prefecture_id, Prefecture.pluck(:name,:id), { include_blank: true, selected: 1 }, { id: "prefecture_id", class: "prefecture_class" } %>
    </div>
     <div class= "field pr-3">
      <%= f.label :season_id, "季節" %>
      <%= f.select :season_id, Season.pluck(:name, :id), { include_blank: true, selected: 1 }, { id: "season_id", class: "season_class" } %>
    </div>
  </div>
  <div class="actions text-center p-3">
      <%= f.submit '投稿', class: "btn btn-outline-secondary"  %>
      <% end %>
  </div>
</div>